{
  "manifest_version": 2,
  "name": "TOS Summarizer",
  "version": "1.0",
  "description": "Summarizes terms of service and displays them in bullet points using the OpenAI API.",
  "permissions": [
    "activeTab",
    "storage",
    "https://api.openai.com/"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
